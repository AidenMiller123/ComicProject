<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Marvel Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ComicMarvelProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <div class="d-flex justify-content-center flex-grow-1">
                    <a class="navbar-brand" style="font-size: 40px; color:snow;" asp-controller="Home" asp-action="Index">Marvel Project</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="CharactersList">Charcters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Comics" asp-action="ComicsList">Comics</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Series" asp-action="SeriesList">Series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Events" asp-action="EventsList">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Stories" asp-action="StoriesList">Stories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Creators" asp-action="CreatorsList">Creators</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <p class="footerDescription">&copy; 2024 - Marvel Comic Project - Created by Aiden Miller</p> 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>