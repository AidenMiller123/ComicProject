@model ComicMarvelProject.Models.Character
@{
	ViewData["Title"] = "Character";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="Character-header-container">
	<div class="card-img-wrapper-character">
		<img class="card-img-character" style="background-image: url('@($"{Model.Thumbnail.Path}.{Model.Thumbnail.Extension}")');" />
	</div>
	<div>
		<h2 class="card-title character-name">@Model.Name</h2>
		<h2 class="card-text character-description" style="padding-left: 10px;">@Model.Description</h2>
	</div>
</div>

@if(Model.Comics.Items != null && Model.Comics.Items.Count > 0)
{
	<div class="container" style="padding-top: 10px;">
		<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
			@foreach (var comic in Model.Comics.Items)
			{
				<div class="col mb-4">
					<div class="card" style="width: 12rem;">
						<h3 class="card-title text-center" style="font-size: 15px;">@comic.Name</h3>
						<div>

						</div>
					</div>
				</div>
			}
		</div>
	</div>
}
else
{
	<h4 class="text-center">No comics available for this character.</h4>
})
